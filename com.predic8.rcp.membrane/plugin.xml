<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.predic8.rcp.membrane.MembraneApplication">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.predic8.rcp.membrane.application"
            name="Membrane Monitor">
         <property
               name="appName"
               value="Membrane Monitor">
         </property>
         <property
               name="aboutImage"
               value="icons/logo128.png">
         </property>
         <property
               name="aboutText"
               value="Membrane SOAP Monitor Version 1.3.1&#x0A;  Copyright @  2004-2009 by predic8 GmbH&#x0A;  Moltkestr. 40  53173 Bonn Germany &#x0A;  www.predic8.com &#x0A;  Phone: +49 (0)228/555 25 76-0&#x0A;  info@predic8.de">
         </property>
         <property
               name="windowImages"
               value="icons/logo32.png">
         </property>
      </product>
   </extension>

</plugin>
