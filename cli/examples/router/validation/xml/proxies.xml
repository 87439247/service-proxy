<proxies xmlns="http://membrane-soa.org/proxies/1/"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      	 xsi:schemaLocation="http://membrane-soa.org/proxies/1/ http://membrane-soa.org/schemas/proxies-1.xsd">
	<serviceProxy port="2000">
		<request>
			<validator schema="year.xsd" />
		</request>
		<response>
			<validator schema="amount.xsd" />
		</response>
		<target host="localhost" port="2001" />
	</serviceProxy>
	
	<serviceProxy port="2001">
		<groovy>
			Response.ok("&lt;amount&gt;100&lt;/amount&gt;").build()			
		</groovy>
	</serviceProxy>
	
</proxies>

