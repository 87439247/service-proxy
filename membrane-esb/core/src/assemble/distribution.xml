 <assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
  	<dependencySet>
  		<excludes><exclude>com.predic8:membrane-esb</exclude></excludes>
  		<unpack>false</unpack>
  		<outputDirectory>/lib</outputDirectory>
  	</dependencySet>
  </dependencySets>
  <fileSets>
  	<fileSet>
  		<directory>docBase</directory>
  		<outputDirectory>/docBase</outputDirectory>
  	</fileSet>
  	<fileSet>
  		<directory>examples/router</directory>
  		<outputDirectory>/examples</outputDirectory>
  		<excludes><exclude>**/build/</exclude></excludes>
  	</fileSet>
  	<fileSet>
  		<directory>examples/router</directory>
  		<outputDirectory>/examples</outputDirectory>
  		<includes><include>custom-interceptor/build/**/*</include></includes>
  	</fileSet>
  	<fileSet>
  		<directory>router</directory>
  		<outputDirectory>/</outputDirectory>
  	</fileSet>
  	<fileSet>
  		<directory>lib</directory>
  		<outputDirectory>lib</outputDirectory>
  	</fileSet>
  </fileSets>
  <files>
  	<file>
  		<source>${project.build.directory}/${project.name}-${project.version}-starter.jar</source>
  		<outputDirectory>/</outputDirectory>
  		<destName>starter.jar</destName>
  	</file>
   	<file>
  		<source>${project.build.directory}/${project.name}-${project.version}-rt.jar</source>
  		<outputDirectory>/lib</outputDirectory>
  		<destName>${project.name}-${project.version}.jar</destName>
  	</file>
  </files>
</assembly>