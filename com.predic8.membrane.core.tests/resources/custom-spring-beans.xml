<spring:beans xmlns="http://membrane-soa.org/router/beans/1/"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd					    
					    http://membrane-soa.org/router/beans/1/ http:/www.predic8.com/schema/router/conf/router-conf.xsd">

	<router useClusterManager="false" 
			exchangeStore="memoryExchangeStore" 
			adjustHostHeader="true" 
			indentMessage="true" 
			adjustContentLength="true" />
 
	<transport coreThreadPoolSize="20" socketTimeout="30000" httpClientRetries="5" tcpNoDelay="true">
		<ruleMatching />
		<dispatching />
		<exchangeStore name="forgetfulExchangeStore" />
		<exchangeStore name="memoryExchangeStore" />
		<exchangeStore name="fileExchangeStore" />
		<transform xslt="strip.xslt"/>
		<regExUrlRewriter>
			<mapping regex="/bank/" uri="/axis2/" />
		</regExUrlRewriter>
		<adminConsole />
		<webServer docBase="docBase" />
		<balancer>
			<xmlSessionIdExtractor namespace="http://chat.predic8.com/" localName="session" />
			<!-- <clusters>
				<cluster name="Default">
					<node host="localhost" port="8080"/>
				</cluster>				
			</clusters>
			-->
			<byThreadStrategy maxNumberOfThreadsPerEndpoint="10" retryTimeOnBusy="1000" />
		</balancer>
		<throttle delay="1000" maxThreads="5" busyDelay="3000"/>		
		<balancer>
			<jSessionIdExtractor />
		</balancer>
		<clusterNotification validateSignature="true"
			keyHex="2324920293" timeout="5000" />
		<basicAuthentication>
			<user name="jim" password="password" />
		</basicAuthentication>
		<wsdlRewriter registryWSDLRegisterURL="http://predic8.de/register" 
					  port="4000" protocol="http" host="localhost" />
		<statisticsCSV file="temp\stat.csv" />
		<rest2Soap>
			<mapping regex="/bank/.*" 
					 soapAction=""
					 soapURI="/axis2/services/BLZService"
					 requestXSLT="request.xsl" 
					 responseXSLT="response.xsl"
					 responseType="json" />
		</rest2Soap>			
   		<validator wsdl="http://www.predic8.com:8080/material/ArticleService?wsdl" />
		<switch>
			<case xPath="//convert" url="http://www.thomas-bayer.com/axis2/" />
		</switch>
		<regExReplacer regex="Hallo" replace="Hello" />
		<counter name="Node 1"/>
		<accessControl file="resources/acl/acl.xml"/>
		<groovy>exc.setProperty('foo', 'bar');CONTINUE</groovy>		
		<!-- 
   		<statisticsJDBC postMethodOnly="false" soapOnly="true" dataSource="dataSource" />
   		-->
		<formValidation>
			<field name="age" regex="\d+" />
			<field name="name" regex="[a-z]+" />
		</formValidation>
   		<log/>
   		<httpClient />
	</transport>

	<formValidation>
		<field name="age" regex="\d+" />
		<field name="name" regex="[a-z]+" />
	</formValidation>
	<transform xslt="strip.xslt" />
	<regExUrlRewriter>
		<mapping regex="/bank/" uri="/axis2/" />
	</regExUrlRewriter>
	<adminConsole />
	<webServer docBase="docBase" />
	<balancer >
		<roundRobinStrategy />
	</balancer>
	<balancer id="balancer2">
		<jSessionIdExtractor />
	</balancer>
	<clusterNotification validateSignature="true"
		keyHex="2324920293" timeout="5000" />
	<basicAuthentication>
		<user name="jim" password="password" />
	</basicAuthentication>
	<accessControl file="resources/acl/acl.xml"/>
	<wsdlRewriter />
	<statisticsCSV file="temp\stat.csv" />
	<groovy>exc.setProperty('foo', 'bar');CONTINUE</groovy>
	<throttle delay="1000" maxThreads="5" busyDelay="3000"/>		
	<log headerOnly="true"/>
<!-- 
	<statisticsJDBC postMethodOnly="false" soapOnly="true" dataSource="dataSource" />
-->
	<rest2Soap>
		<mapping regex="/bank/.*" 
				 soapAction=""
				 soapURI="/axis2/services/BLZService"
				 requestXSLT="examples/rest2soap/blz-httpget2soap-request.xsl" 
				 responseXSLT="examples/rest2soap/strip-soap-envelope.xsl" />
	</rest2Soap>			
  	<validator wsdl="http://www.predic8.com:8080/material/ArticleService?wsdl" />	
	<switch>
		<case xPath="//convert" url="http://www.thomas-bayer.com/axis2/" />
	</switch>
	<regExReplacer regex="Hallo" replace="Hello" />
	<counter name="Node 1"/>
	
	<memoryExchangeStore />
	<forgetfulExchangeStore />
	<fileExchangeStore dir="temp" raw="false" saveBodyOnly="false"/>

