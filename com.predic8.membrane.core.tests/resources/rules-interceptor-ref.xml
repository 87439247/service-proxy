<?xml version='1.0' encoding='UTF-8'?>
<configuration>
	<rules>
		<forwardingRule name="localhost" host="*" port="2000" path=".*"
			method="*">
            <target host="localhost" port="8080"/>
			<interceptors>
				<interceptor id="roundRobinBalancer" name="Round Robin Balancer" />
				<interceptor id="urlRewriter" name="Simple URL Rewriter" />
			</interceptors>			
		</forwardingRule>
		<proxyRule name="proxy" port="2001">
      		<interceptors>
				<interceptor id="roundRobinBalancer" name="Round Robin Balancer" />
				<interceptor id="urlRewriter" name="Simple URL Rewriter" />
		    </interceptors>
    	</proxyRule>		
	</rules>
	<global>
		<adjustHostHeader>true</adjustHostHeader>
	</global>
</configuration>