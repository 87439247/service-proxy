<?xml version='1.0' encoding='UTF-8'?>
<configuration>
	<rules>
		<proxyRule name="HTTP proxy" port="9000" 
			 		  blockRequest="true"
                      blockResponse="false"
                      inboundTLS="false"
                      outboundTLS="false" 
		/>
		<forwardingRule name="thomas-bayer.com"  port="3000" path=".*"  
					  blockRequest="false"
                      blockResponse="true"
                      inboundTLS="false"
                      outboundTLS="false" >
            <target host="thomas-bayer.com" port="80"/>
		</forwardingRule>
		<forwardingRule name="localhost" port="2000" path=".*" 
					  method="GET" 
					  host="/abc/*"		 
					  blockRequest="false"
                      blockResponse="false"
                      inboundTLS="false"
                      outboundTLS="false" >
            <target host="localhost" port="8080"/>
		</forwardingRule>
	</rules>
	<global>
		<adjustHostHeader>true</adjustHostHeader>
	</global>
</configuration>