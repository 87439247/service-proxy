<proxies>
	<serviceProxy name="Router">
		<switch>
			<case xPath="//order[@express='yes']" url="service:Express" />
			<case xPath="//order/items/item[@id='7']" url="service:ImportItems" />
			<case xPath="//order" url="service:Order" />
		</switch>
	</serviceProxy>

	<serviceProxy name="ImportItems">
		<groovy>
			exc.response = Response.ok("Order contains import items.").build()			
			ABORT
		</groovy>
	</serviceProxy>

	<serviceProxy name="Order">
		<groovy>
			exc.response = Response.ok("Normal order received.").build()			
			ABORT
		</groovy>
	</serviceProxy>
	
	<serviceProxy name="Express">
		<groovy>
			exc.response = Response.ok("Express order received.").build()			
			ABORT
		</groovy>
	</serviceProxy>

</proxies>