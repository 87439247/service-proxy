<beans>

	<bean id="router" class="com.predic8.membrane.core.Router">
		<property name="ruleManager" ref="ruleManager"/>
		<property name="transport" ref="transport"/>
		<property name="exchangeStore" ref="exchangeStore"/>
		<property name="configurationManager" ref="configurationManager"/>
	</bean>

	<bean id="transport" class="com.predic8.membrane.core.transport.http.HttpTransport">
		<property name="inInterceptors">
			<list>
				<bean class="com.predic8.membrane.core.interceptor.RoutingInterceptor">
					<property name="ruleManager" ref="ruleManager"></property>
				</bean>
				 
				<bean class="com.predic8.membrane.core.interceptor.ExchangeStoreInterceptor">
					<property name="exchangeStore" ref="exchangeStore" />
				</bean>
			</list>
		</property>
		<property name="outInterceptors">
			<list>
				<bean class="com.predic8.membrane.core.interceptor.WSDLInterceptor"/>
			</list>
		</property>
	</bean>
	<bean id="ruleManager" class="com.predic8.membrane.core.RuleManager">
		<property name="exchangeStore" ref="exchangeStore"/>
	</bean>
	
	<bean id="exchangeStore" class="com.predic8.membrane.core.exchangestore.ForgetfulExchangeStore" />

    <!-- 
	  Change the value of the dir property to point a folder where messages 
      should be stored. The folder must exist.
	-->
	<!--  
	<bean id="exchangeStore" class="com.predic8.membrane.core.exchangestore.FileExchangeStore"> 
		<property name="dir" value="/tmp"/>	
	</bean>
	-->


	<bean id="configurationStore" class="com.predic8.membrane.core.io.ConfigurationFileStore" />


	<bean id="configurationManager" class="com.predic8.membrane.core.ConfigurationManager"
		init-method="init">
		<property name="transport" ref="transport" />
		<property name="ruleManager" ref="ruleManager" />
		<property name="configurationStore" ref="configurationStore" />
		<property name="adjustHostHeader" value="true" />
		<property name="indentMessage" value="true" />
		<property name="adjustContentLength" value="true" />
		<property name="trackExchange" value="true" />
	</bean>
</beans>